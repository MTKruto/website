{
  "lock": false,
  "imports": {
    "@deno/doc": "jsr:@deno/doc@^0.184.0",
    "lume/": "https://deno.land/x/lume@v2.4.3/"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "gen": "deno run -A _gen.tsx"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ],
    "jsx": "precompile",
    "jsxImportSource": "npm:preact"
  },
  "exclude": [
    "_site",
    "doc",
    "src/methods/",
    "src/methods.md",
    "src/types/",
    "src/types.md",
    "src/gh/"
  ],
  "nodeModulesDir": "auto"
}
