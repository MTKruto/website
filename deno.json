{
  "lock": false,
  "imports": {
    "@david/dax": "jsr:@david/dax@^0.43.2",
    "deno_doc/": "https://deno.land/x/deno_doc@0.125.0/",
    "lume/": "https://deno.land/x/lume@v2.4.3/",
    "lume_markdown_plugins/": "https://deno.land/x/lume_markdown_plugins@v0.9.0/"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s",
    "gen": "deno run -A _gen.tsx"
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any", "ban-ts-comment"]
    }
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ],
    "jsx": "precompile",
    "jsxImportSource": "npm:preact"
  },
  "exclude": [
    "_site",
    "doc",
    "src/methods/",
    "src/methods.md",
    "src/types/",
    "src/types.md",
    "src/gh/"
  ],
  "nodeModulesDir": "auto"
}
